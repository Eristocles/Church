<!-- Contact via email-->
<section class="site-section bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-8 pr-md-5">
        <form action="/contact" method="post">
          <div class="row">
            <div class="col-md-4 form-group">
              <label for="name">Name</label>
              <input type="text" id="name" class="form-control py-2" name="name">
            </div>
            <div class="col-md-4 form-group">
              <label for="phone">Phone</label>
              <input type="text" id="phone" class="form-control py-2" name="phone">
            </div>
            <div class="col-md-4 form-group">
              <label for="email">Email</label>
              <input type="email" id="email" class="form-control py-2" name="email">
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 form-group">
              <label for="message">Write Message</label>
              <textarea name="message" id="message" class="form-control py-2" cols="30" rows="8"></textarea>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 form-group">
              <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-4">

        <div class="block-23">
          <h3 class="heading mb-5">Contact Information</h3>
          <ul>
            <li><span class="icon ion-android-pin"></span><span class="text">Anton-Zeeh-Stra√üe 10, Wiesbaden, Germany</span></li>
